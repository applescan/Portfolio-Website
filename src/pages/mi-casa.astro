---
import Title from "../components/elements/Title";
import Images from "../components/elements/Images";
import Button from "../components/buttons/Button";
import Body from "../components/elements/Body";
import List from "../components/elements/List";
import Layout from "../layouts/Layout.astro";

const projectInfo = {
  title: "Mi Casa - Virtual House Tour",
  desc: `Mi Casa is a fun, interactive virtual tour of my house! Explore the different rooms, and get to know more about me. The game introduces a blend of exploration, storytelling, and mini-games to keep you entertained. More mini-games are coming soon, making this experience even more fun and engaging.`,
  skills: "Game Development, Web Development, React, Kaboom.js",
  year: "2025",
  videoUrl: "/img/mi-casa/mi-casa.mov",
  images: [
    { src: "/img/mi-casa/1.png", alt: "Welcome to my living room!" },
    { src: "/img/mi-casa/2.png", alt: "Meet the characters!" },
  ],
};

const links = [
  { title: "Try the game!", url: "https://mi-casa-xi.vercel.app/" },
  { title: "View Code", url: "https://github.com/applescan/mi-casa" },
];

const bodies = [
  {
    title: "Welcome to my house",
    desc: `Mi Casa is a fun, casual way to explore a world that feels like home. It's all about creating a playful, personalized space where you can wander and enjoy mini-games designed to make you smile. Whether you’re looking for a fun escape or a chance to learn more about me through the game’s playful settings, Mi Casa is here to make your day just a little brighter! 🌟`,
  },
  {
    title: "Key Features",
    desc: `
    • Explore my virtual home – wander through cozy rooms filled with personality! 🏡✨
    • Meet a cast of adorable characters who’ll leave you grinning 😁
    • Unlock fun mini-games – solve quirky puzzles and collect rewards! 🎮
    • Chill, laugh, and enjoy an experience full of charm and surprises! 🥳🎉
    `,
  },
  {
    title: "Bonus Surprise!✨",
    desc: `This is just the beginning! Expect more mini-games and character interactions to be added as I continue developing the game. Stay tuned for future updates!`,
  },
  {
    title: "Built With",
    desc: `• React • Kaboom.js • TypeScript • CSS3 • HTML5 • WebGL • Figma • Node.js`,
  },
];

const gameFeatures = {
  title: "Game Features",
  items: [
    "Explore Every Room: From the kitchen to the backyard, each space holds fun surprises. 🏠🔍",
    "Mini-Games Galore: Puzzle your way through fun challenges – more games are on the way! 🎮🧩",
  ],
};

const techStack = {
  title: "Technology Stack",
  items: [
    "Kaboom.js – The superpowered game engine making everything smooth and fast. ⚡️",
    "React – Building dynamic, delightful experiences one component at a time. 🔥",
    "WebGL – Bringing immersive visuals straight to your browser. 🌍",
    "CSS3 – Making every corner of Mi Casa look fabulous and fun. 🎨",
  ],
};
---

<Layout title={projectInfo.title}>
  <section class="whiteBg">
    <div class="container">
      <Title
        title={projectInfo.title}
        subtitle=""
        descriptions={[projectInfo.desc]}
        skills={projectInfo.skills}
        year={projectInfo.year}
      />

      <Images images={projectInfo.images} />
      <br />
      <video
        style="width: 100%; height: 100%; padding-bottom: 50px;"
        class="radius8"
        controls
      >
        <source src={projectInfo.videoUrl} type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <br />
      <h1 class="extraBold font25">Links:</h1>
      <div class="flexNullCenter">
        {
          links.map((link) => (
            <div style="width: 190px; margin-right: 15px;">
              <a href={link.url} target="_blank" rel="noopener noreferrer">
                <Button title={link.title} border={false} />
              </a>
            </div>
          ))
        }
      </div>

      {bodies.map((body) => <Body title={body.title} desc={body.desc} />)}

      <Body title="Game Demo" desc="" />
      <p>
        Ready to explore? Jump right into the game at <a
          class="purpleColor"
          href="https://mi-casa-xi.vercel.app/"
          target="_blank">https://mi-casa-xi.vercel.app/</a
        >
      </p>
      <br />

      <h1 class="font30 extraBold">Key Features</h1>
      <List title={gameFeatures.title} items={gameFeatures.items} />

      <List title={techStack.title} items={techStack.items} />

      <div style="width: 150px; padding-top: 100px;">
        <a href="/#projects">
          <Button title="Back" border={false} />
        </a>
      </div>
    </div>
  </section>
</Layout>
